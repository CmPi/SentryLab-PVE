[Unit]
Description=SentryLab HA Auto-Discovery
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/sentrylab-discovery.sh
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target